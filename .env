# ==============================================================================
# PDF RAG Chatbot v2.0 - Environment Configuration
# ==============================================================================
# IMPORTANT: Never commit this file to version control!

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
APP_NAME=PDF RAG Chatbot
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=true

# ==============================================================================
# SERVER SETTINGS
# ==============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=false

# ==============================================================================
# DATABASE - MongoDB
# ==============================================================================
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=chatbot

# ==============================================================================
# LOGGING SETTINGS
# ==============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# ==============================================================================
# FILE UPLOAD SETTINGS
# ==============================================================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=50

# ==============================================================================
# PODCAST SETTINGS
# ==============================================================================
PODCAST_OUTPUT_DIR=./podcasts
PODCAST_API_URL=local_podcast

# ==============================================================================
# CORS SETTINGS (Cross-Origin Resource Sharing)
# ==============================================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_CREDENTIALS=true
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# ==============================================================================
# WEBSOCKET SETTINGS
# ==============================================================================
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_MAX_CONNECTIONS=1000

# ==============================================================================
# PERFORMANCE SETTINGS
# ==============================================================================
MAX_CONCURRENT_UPLOADS=10
PDF_PROCESSING_TIMEOUT_SECONDS=300
MINDMAP_GENERATION_TIMEOUT_SECONDS=300
PODCAST_GENERATION_TIMEOUT_SECONDS=600

# ==============================================================================
# SESSION SETTINGS
# ==============================================================================
SESSION_CLEANUP_INTERVAL_HOURS=24
SESSION_MAX_AGE_HOURS=24
