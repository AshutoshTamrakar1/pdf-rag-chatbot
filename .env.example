# ==============================================================================
# PDF RAG Chatbot v2.0 - Environment Configuration
# ==============================================================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
APP_NAME=PDF RAG Chatbot
APP_VERSION=2.0.0
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# ==============================================================================
# SERVER SETTINGS
# ==============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# ==============================================================================
# DATABASE SETTINGS (MongoDB)
# ==============================================================================
MONGODB_URI=mongodb://localhost:27017/chatbot
MONGODB_DB_NAME=pdf_rag_chatbot

# ==============================================================================
# VECTOR STORE SETTINGS (ChromaDB) - NEW in v2.0
# ==============================================================================
# ChromaDB persistent storage directory
CHROMA_PERSIST_DIR=./chroma_db

# Default ChromaDB collection name for PDF documents
CHROMA_COLLECTION_NAME=pdf_documents

# HuggingFace embedding model (local, no API needed)
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# Vector store search configuration
VECTOR_STORE_SEARCH_TYPE=similarity  # similarity, mmr, or similarity_score_threshold
VECTOR_STORE_K=3         # Number of documents to retrieve
VECTOR_STORE_FETCH_K=10  # Number of documents to fetch for MMR

# ==============================================================================
# LOGGING SETTINGS
# ==============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=  # Leave empty for default logs/app.log

# ==============================================================================
# FILE UPLOAD SETTINGS
# ==============================================================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=50

# ==============================================================================
# PODCAST OUTPUT SETTINGS
# ==============================================================================
PODCAST_OUTPUT_DIR=./podcasts
PODCAST_API_URL=local_podcast

# ==============================================================================
# CORS SETTINGS
# ==============================================================================
CORS_ORIGINS=*
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# ==============================================================================
# WEBSOCKET SETTINGS
# ==============================================================================
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_MAX_CONNECTIONS=1000

# ==============================================================================
# PERFORMANCE SETTINGS
# ==============================================================================
MAX_CONCURRENT_UPLOADS=10
PDF_PROCESSING_TIMEOUT_SECONDS=300
MINDMAP_GENERATION_TIMEOUT_SECONDS=300
PODCAST_GENERATION_TIMEOUT_SECONDS=600

# ==============================================================================
# SESSION SETTINGS
# ==============================================================================
SESSION_CLEANUP_INTERVAL_HOURS=24
SESSION_MAX_AGE_HOURS=24

# ==============================================================================
# OLLAMA SETTINGS (Installed separately)
# ==============================================================================
# Ollama must be installed and running separately
# Download from: https://ollama.ai
#
# Required models (pull manually):
#   ollama pull llama3
#   ollama pull gemma
#   ollama pull phi3
#
# Default Ollama endpoint: http://localhost:11434
